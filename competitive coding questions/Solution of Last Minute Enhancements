#include<bits/stdc++.h>
using namespace std;

#define fastio()                      \
    ios_base::sync_with_stdio(false); \
    cin.tie(NULL);                    \
    cout.tie(NULL)
typedef long long ll;

void code()
{
    int n;
    cin>>n;

    int arr[n];

    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }

    if( n==1 )
    {
        cout << 1;
        return;
    }

    sort( arr , arr + n); // sorting the notes in increasing order

    /* 
        check if two adjacent notes ( arr[i] and arr[i+1] ) are equal or not 
        if they are equal then increase the second note ( arr[i+1] ) by 1 
        repeat this process for every pair of notes
    */

    for(int i=0;i<n-1;i++)
    {
        if(arr[i] == arr[i+1])
        {
            arr[i+1] += 1;
        }
    }

    // check for number of distinct notes 
    // this can be done by inserting all notes into a SET and the size is the answer
    // or by using a simple loop

    int count=0; // for counting the number of distinct notes

    set<int> notes; // set method 

    for(int i = 0;i < n;i++)
    {
        notes.insert(arr[i]);
    }

    count = notes.size();

    cout << count;
}

int main()
{
    fastio();

    int t=1; // number of testcases
    cin>>t;

    for(int i=1;i<=t;i++)
    {
        code();
        cout<<"\n";
    }
    return 0;
}
